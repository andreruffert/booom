#!/usr/bin/env node
'use strict';

const argv = require('yargs').argv;
const isUrl = require('is-url');
const fetch = require('../lib/fetch');

const url = argv._[0];

if (!url) {
  console.error('URL argument required');
  process.exit(1);
}

if (!isUrl(url)) {
  console.error('URL not valid');
  process.exit(1);
}

fetch(url);
